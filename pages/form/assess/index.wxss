/* pages/form/assess/index.wxss */
page{
    font-size: 30rpx;
    background: #f5f5f5;
}

.box{
    width: 100%;
    overflow: hidden;
}

.box .header{
    width: 100%;
    height: 140rpx;
    line-height: 140rpx;
    background: #ffffff;
    overflow: hidden;
}

.box .header image{
    display: block;
    width: 100rpx;
    height: 100rpx;
    float: left;
    margin-top: 20rpx;
    margin-left: 30rpx;
}

.box .header text{
    display: block;
    float: left;
    margin-left: 20rpx;
    font-weight: bold;
}

.box .wrap{
    width: 100%;
    margin-top: 20rpx;
}

.box .wrap .wrapList{
    width: 100%;
    background: #ffffff;
    margin-bottom: 30rpx;
    padding-bottom: 30rpx;
}

.box .wrap .wrapList .title{
    margin-left: 30rpx;
    font-size: 32rpx;
    font-weight: 700;
    padding-top: 30rpx;
}

.box .wrap .wrapList .content{
    margin-left: 35rpx;
    margin-right: 25rpx;
}

.box .wrap .wrapList .content .goods{
    margin-top: 20rpx;
    line-height: 60rpx;
    overflow: hidden;
}

.box .wrap .wrapList .content .goods .goods-title{
    float: left;
    font-weight: bold;
}

.box .wrap .wrapList .content .goods .goods-feel{
    float: right;
    text-align: right;
    overflow: hidden;
    position: relative;
}

.box .wrap .wrapList .content .goods .goods-feel image{
    display: block;
    width: 40rpx;
    height: 40rpx;
    margin-top: 10rpx;
    float: left;
    margin-left: 10rpx;
}

.box .wrap .wrapList .content .feature{
    overflow: hidden;

}

.box .wrap .wrapList .content .feature text{
    display: block;
    float: left;
    color: #999;
    font-size: 28rpx;
    margin-top: 15rpx;
    margin-right: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 10rpx;
    border-radius: 5rpx;
    text-align: center;
    border: 1px solid #dbdbdb;
}

.box .wrap .wrapList .content .textarea{
    border: 1px solid #ddd;
    margin-top: 30rpx;
    background: #fcfcfc;
}

.box .wrap .wrapList .content .textarea textarea{
    width: 96%;
    min-height: 180rpx;
    line-height: 56rpx;
    margin: 0 20rpx;
}

.box .wrap .submit{
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    margin-top: 30rpx;
    overflow: hidden;
    text-align: center;
    color: #ffffff;
    position: fixed;
    bottom: 0;
    z-index: 100;
}

.box .wrap .submit .point{
    width: 65%;
    float: left;
    background: #444;
}

.box .wrap .submit .btn{
    width: 35%;
    float: left;
    background: #56d176;
    font-size: 32rpx;
}