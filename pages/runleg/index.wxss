/* pages/city/index.wxss */
page{
    background: #eee;
}

.box{
    width: 100%;
    font-size: 30rpx;
}

.box .clearfix{
    width: 100%;
    height: 100rpx;
}

.box .title{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #fff;
    font-weight: bold;
    background: #43CD80;
    text-align: center;
    position: fixed;
    top: 0;
    z-index: 10;
}

.box .title image{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 25rpx;
    
}

.box .title image.img_l{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 30rpx;
    left: 20rpx;
}

.box .title text.txt{
    position: absolute;
    display: block;
    top: 0;
    right: 20rpx;
}

.box .wrap{
    position: fixed;
    background: #fff;
    z-index: 100;
    width: 80%;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    margin: 0 auto;
    bottom: 30rpx;
    left: 10%;
    color: #666;
    font-size: 28rpx;
    font-weight: bold;
}

.box .knight{
    height: 60rpx;
    overflow: hidden;
    text-align: center;
    line-height: 40rpx;
    position: fixed;
    z-index: 100;
    font-weight: bold;
    font-size: 28rpx;
    top: 120rpx;
    left: 30rpx;
}

.box .knight image{
    width: 60rpx;
    height: 60rpx;
    display: block;
    float: left;
}

.box .knight text{
    display: block;
    float: right;
    height: 40rpx;
    margin-top: 10rpx;
    margin-left: 5rpx;
    padding: 0 15rpx;
    background: #000;
    opacity: 0.6;
    color: #fff;
}