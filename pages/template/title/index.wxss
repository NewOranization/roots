.box{
    font-size: 32rpx;
    width: 100%;
}

.box .title{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
    background: #43CD80;
    text-align: center;
    position: fixed;
    top: 0;
    z-index: 100;
}

.box .title image{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 30rpx;
    left: 20rpx;
}