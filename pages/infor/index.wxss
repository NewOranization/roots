page{
  background:#fff;
}
.lunbo{
  position: relative;
}
.lunbo image{
  width:100%;
}
.lunbo text{
  position: absolute;
  left:20rpx;
  bottom:20rpx;
}
.content .content-item{
  display: flex;
  align-items: flex-start;
  padding:30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}
.content .content-item image{
  width:250rpx;
  height:200rpx;
  margin-right:20rpx;
}
.content .content-item .right{
  flex: 1;
}
.content .content-item .right .title{
  font-size: 36rpx;
  font-weight: bold;
}
.content .content-item .right view{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top:20rpx;
  margin-bottom: 20rpx;
  color:#8c8a8c;
}

.content .content-item .right .eyes,.sort{
  float: right;
  display: block;
  padding:3rpx 10rpx;
  border: 1rpx solid #eee;
  border-radius: 30rpx;
  color:#42dbff;
}
.content .content-item .right .sort{
  background: #42dbff;
  color:#fff;
  float: left;
}