page{
  background:#fff;
}
.lunbo image{
  width:100%;
}
.content .content-item{
  display: flex;
  align-items:center;
  padding:30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.content .content-item image{
  width:250rpx;
  height:200rpx;
  margin-right:20rpx;
}
.content .content-item .right{
  flex: 1;
}
.content .content-item .right .title{
  font-size: 34rpx;
  font-weight: bold;
}
.content .content-item .right .time{
  color:#ccc;
  display: block;
  margin-top:10rpx;
}
.content .content-item .right view{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top:20rpx;
  margin-bottom: 20rpx;
  color:#8c8a8c;
}

.content .content-item .right .eyes{
  float: right;
  display: block;
  padding:3rpx 10rpx;
  border: 1rpx solid #eee;
  border-radius: 30rpx;
  color:#42dbff;
}
.content .content-item .right .sort{
  float: left;
  color:#42dbff
}

.inToptext{
  position: absolute;
  top:20rpx;right: 10rpx;
  z-index: 10;
  color:#fff;
  font-size: 28rpx;
  transform:rotate(45deg);
  -ms-transform:rotate(45deg); 	/* IE 9 */
  -moz-transform:rotate(45deg); 	/* Firefox */
  -webkit-transform:rotate(45deg); /* Safari 和 Chrome */
  -o-transform:rotate(45deg);
}
.inTopbox{
  position: absolute;
  top:-97rpx;
  right:-95rpx;
  border:80rpx solid transparent;
  border-bottom:80rpx solid #42dbff;
  transform:rotate(45deg);
  -ms-transform:rotate(45deg); 	/* IE 9 */
  -moz-transform:rotate(45deg); 	/* Firefox */
  -webkit-transform:rotate(45deg); /* Safari 和 Chrome */
  -o-transform:rotate(45deg);
}