.search{
  background: #fff;
  height:100rpx;
  margin-bottom: 20rpx;
  border-bottom: 15rpx solid #eee;
}
.search image{
  width:46rpx;
  height:45rpx;
  margin-top: 30rpx;
  margin-left:15rpx;
  float: left;
}
.search input{
  width:60%;
  height:55rpx;
  border-radius:30rpx;
  background: #eee;
  margin-top:25rpx;
  margin-left:30rpx;
  float: left;
  position: relative
}
.search icon{
  position: absolute;
  top:40rpx;
  left:100rpx;
  z-index: 100
}
.search .searchSub{
  width:100rpx;
  height:50rpx;
  border-radius: 10rpx;
  background: red;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  top:30rpx;
  right:50rpx;
}
