.hotSearch{
  background: #fff;
  padding:30rpx 20rpx;
  margin-bottom:20rpx;
}
.hotSearch view{
}
.hotSearch text{
  display: inline-block;
  padding: 10rpx 30rpx;
  border: 1rpx solid #eee;
  border-radius: 25rpx;
  margin-left:15rpx;
  margin-top:30rpx;
}

.historySearch{
  background: #fff;
  margin-bottom:100rpx;
}
.historySearch view{
  padding:30rpx;
  border-bottom:1rpx dashed #eee; 
  color:#808080;
}
.historySearch view image{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
.historySearch view:last-child{
  text-align: center;
}