.search{
  background: #fff;
  height:100rpx;
  border-bottom: 1rpx solid #eee;
}
.search image{
  width:46rpx;
  height:45rpx;
  margin-top: 30rpx;
  margin-left:15rpx;
  float: left;
}
.search input{
  width:60%;
  height:55rpx;
  border-radius:30rpx;
  background: #eee;
  margin-top:25rpx;
  margin-left:30rpx;
  float: left;
  position: relative
}
.search icon{
  position: absolute;
  top:40rpx;
  left:100rpx;
  z-index: 100
}
.search .searchSub{
  width:100rpx;
  height:50rpx;
  border-radius: 10rpx;
  background: red;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  top:30rpx;
  right:50rpx;
}

/****************搜索结果  */
.searchResult .result{
  margin-bottom: 20rpx;
}
.searchResult .result view{
  display: flex;
  justify-content: space-between;
  padding:20rpx;
  background: #fff;
}
.searchResult .result view:not(:last-child){
   border-bottom: 1rpx solid #eee;
}
.resultItem{
  padding:20rpx;
  display:flex;
  background: #fff;
}
.resultItem:not(:last-child){
  border-bottom: 1rpx solid #eee;
}
.resultItem image{
  width:200rpx;
  height:150rpx;
  flex: 0 0 30%;
}
.resultItem>view{
  flex:0 0 50%;
  padding-left:20rpx;
}
.resultItem>text{
  flex: 0 0 20%;
  text-align: center;
  line-height: 150rpx;
  color:#f63536;
}
.resultItem>view view{
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom:20rpx;
}
.resultItem>view text{
  color:#a0a0a0;
}
.resultItem>view text:not(:last-child){
  border-right:1rpx solid #a0a0a0;
  padding-right:10rpx;
  margin-right:10rpx;
}
/***********推荐  */
.Recommend{
  margin-top:20rpx;
  background: #fff;
}
.Recommend .recomText{
  padding:30rpx 50rpx;
  text-align: center;
  display: flex;
  align-items: center;
}
.Recommend .recomText text{
  display: inline-block;
  width:35%;
  border-top:1rpx solid #eee;
}
.Recommend .recomText image{
  width:46rpx;
  height:46rpx;
  vertical-align: middle;
}
.Recommend .recomText view{
  margin:0 20rpx;
}